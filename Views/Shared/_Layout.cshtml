<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
     body {
         background-image: url('@Url.Content("~/imagenes/recursos/fondo.png")');
         background-size: cover;
         background-position: center 2%;
         background-repeat: no-repeat;
         color: white;
     }
    </style>

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("PROYECTO VERIS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrador"))
                        {
                            <li>@Html.ActionLink("Especialidad", "Index", "Especialidades", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Medicamento", "Index", "Medicamentos", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Medico", "Index", "Medicos", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Paciente", "Index", "Pacientes", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Info Admin", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>


                        }
                        else if (User.IsInRole("Medico"))
                        {
                            <li>@Html.ActionLink("Consulta", "Index", "Consultas", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Receta", "Index", "Recetas", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("SuperAdmin"))
                        {
                            <li>@Html.ActionLink("Consulta", "Index", "Consultas", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Especialidad", "Index", "Especialidades", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Medicamento", "Index", "Medicamentos", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Medico", "Index", "Medicos", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Paciente", "Index", "Pacientes", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Receta", "Index", "Recetas", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Roles", "Index", "AspNetRoles", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "AspNetUsers", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Paciente"))
                        {
                            <li>@Html.ActionLink("Consulta", "Index", "Consultas", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Medico", "Index", "medicos", new { area = "" }, new { @class = "nav-link", id = "actionLink1" })</li>
                        <li>@Html.ActionLink("Paciente", "Index", "pacientes", new { area = "" }, new { @class = "nav-link", id = "actionLink2" })</li>
                        <li>@Html.ActionLink("Administrador", "Index", "pacientes", new { area = "" }, new { @class = "nav-link", id = "mostrarVistaParcial" })</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
